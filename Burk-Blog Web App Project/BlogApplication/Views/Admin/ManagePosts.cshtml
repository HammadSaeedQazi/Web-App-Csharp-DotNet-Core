 List<BlogApplication.Models.Post>
    @{
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }

    <div class="mypost-view" style="margin-top:3.5rem">
        @foreach (BlogApplication.Models.Post p in Model)
        {
            <div style="background-color:white; border-radius:10px; padding:15px;">
                <img style="float:left;" class="rounded-circle" width="100" height="100" src="@Url.Content(p.usrPP)" />
                <div style="margin-left: 140px;">
                    <h6 style="display:inline;">@p.Usr</h6>
                    <p style="display:inline; margin-left:20px">@p.Date</p><hr style="height:1px; color:grey; background-color:grey" />
                    <div>
                        <div><a style="text-decoration:none; color:black;" asp-controller="Admin" asp-action="PostView" asp-route-id="@p.Id"><h3>@p.Title</h3></a></div>
                        <div><p>@p.Content</p></div>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
