@model BlogApplication.Models.RegularUser
<!DOCTYPE html>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3 class="text-center bg-primary heading-style">ADD USER</h3>
<div class="form-style" style="background-color:white; padding-top:5px">
    <center><img class="rounded-circle" src="~/images/LoginPic.png" width="130" height="130" style="margin-bottom:10px" /></center>
    <form method="post" asp-action="AddUser" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Username" class="col-form-label">Username*</label>
            <input type="text" asp-for="Username" class="form-control" placeholder="Username" autocomplete="off">
            <span asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-form-label">Email*</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="xyz@mail.com" autocomplete="off">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label">Upload Profile Picture*</label>
            <div>
                <input type="file" asp-for="profilePicture" accept="image/*" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label">Password*</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="anotherPassword" class="col-form-label">Confirm Password*</label>
            <input asp-for="anotherPassword" type="password" class="form-control" placeholder="Confirm Password">
            <span asp-validation-for="anotherPassword"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="width:100px">Add</button>
        </div>
    </form>
</div>
