@using BlogApplication.Models
@model RegularUser
@{
    Layout = "~/Views/Shared/RegistrationLayout.cshtml";
}

<h3 class="text-center bg-primary heading-style">SIGNUP</h3>
<center>
    <div class="form-style" style="background-color:greenyellow">
        <center><img class="rounded-circle" src="~/images/LoginPic.png" width="130" height="130" style="margin-bottom:40px" /></center>
        <form method="post" asp-action="Signup">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <input type="text" asp-for="Username" class="form-control input-style" placeholder="Username" autocomplete="off">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <input type="email" class="form-control input-style" asp-for="Email" placeholder="Email: xyz@mail.com" autocomplete="off">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control input-style" placeholder="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input asp-for="anotherPassword" type="password" class="form-control input-style" placeholder="Confirm Password">
                <span asp-validation-for="anotherPassword"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width:100px">Sign Up</button>
            </div>
            <div class="m-3">
                Have an account? <a asp-action="Login">Login Here</a>
            </div>
        </form>
    </div>
</center>