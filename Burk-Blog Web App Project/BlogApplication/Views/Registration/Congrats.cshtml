@model BlogApplication.Models.RegularUser

<!DOCTYPE html>
<html>
    <head>
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </head>
    <body style="background-color: #F0F0F0">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <ul class="navbar-nav">
                <li class="active">
                    <h5 class="nav-link">Burk-Blog</h5>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li><img src="~/images/logo.jpg" class="rounded-circle" width="60" height="60" alt="Logo" style="float:right" /></li>
            </ul>
        </nav>

        <h4 class="text-center bg-info heading-style ">Congratulations ! You're successfully signed up</h4>
        <div class="text-center form-style" style="background-color:white">
            <p class="about-info">You entered following details:</p>
            <p class="about-info"><strong>@Model.Username</strong></p>
            <p class="about-info"><strong>@Model.Email</strong></p>
            <p class="about-info"><strong>@Model.Password</strong></p>
            <div style="padding:10px">
                Do you want to <a asp-action="Login">Login</a> ?
            </div>
        </div>
    </body>
</html>